#include<stdio.h>
int main()
{
	int n, x, y, i;
	scanf("%d", &n);
	while (n--)
	{
		int sum = 0;
		scanf("%d%d", &x, &y);
		if (x > y)
		{
			int temp = x;
			x = y;
			y = temp;
		}
		if (x % 2 == 0)
		{
			for (i = x + 1; i < y; i += 2)
				sum += i;
		}
		else
		{
			for (i = x + 2 ; i < y; i += 2)
				sum += i;
		}
		printf("%d\n", sum);
	}
	return 0;
}
